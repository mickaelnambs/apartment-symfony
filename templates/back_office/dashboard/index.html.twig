{% extends 'back_office/base.html.twig' %}
{% block title %}Tableau de board{% endblock %}
{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <div class="card bg-primary text-white text-center mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <a class="text-white" href="{{ path("admin_user_index")}}">
                                    <span class="fa fa-users fa-3x"></span>
                                </a>
                            </div>
                            <div class="col-8">
                                <a href="{{ path("admin_user_index") }}" class="text-white">
                                    <h4 class="card-title">{{stats.users}} utilisateurs</h4>
                                </a>
                            </div>
                        </div>
                    </div>      
                </div>
            </div>
            <div class="col">
                <div class="card bg-success text-white text-center mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <a href="{{ path("admin_ad_index") }}" class="text-white">
                                    <span class="fa fa-hotel fa-3x"></span>
                                </a>
                            </div>
                            <div class="col-8">
                                <a href="{{ path("admin_ad_index") }}" class="text-white">
                                    <h4 class="card-title">{{stats.ads}} annonces</h4>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card bg-secondary text-white text-center mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <a href="{{ path("admin_booking_index") }}" class="text-white">
                                    <span class="fa fa-folder fa-3x"></span>
                                </a>
                            </div>
                            <div class="col-8">
                                <a href="{{ path("admin_booking_index") }}" class="text-white">
                                    <h4 class="card-title">{{stats.bookings}} r√©servations</h4>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card bg-info text-white text-center mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <a href="{{ path("admin_comment_index") }}" class="text-white">
                                    <span class="fa fa-comment fa-3x"></span>
                                </a>
                            </div>
                            <div class="col-8">
                                <a href="{{ path("admin_comment_index") }}" class="text-white">
                                    <h4 class="card-title">{{stats.comments}} avis</h4>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col">
                <div class="alert alert-success">
                    <h2 class="my-3 alert-heading">Les annonces populaires</h2>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Annonce</th>
                                <th>Proprio</th>
                                <th>Moyenne</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for ad in bestAds %}
                                <tr>
                                    <td>{{ad.title}}</td>
                                    <td>
                                        {% if ad.avatar %}
                                            <img src="{{ asset("uploads/avatar/" ~  ad.avatar) }}" alt="" class="avatar avatar-micro">
                                            {{ad.firstName}}
                                            {{ad.lastName}}
                                        {% else %}
                                            <img src="{{ asset("uploads/img/avatar.png") }}" alt="" class="avatar avatar-micro">
                                            {{ad.firstName}}
                                            {{ad.lastName}}
                                        {% endif %}
                                    </td>
                                    <td>
                                        <span class="badge badge-primary">
                                            {{ad.note | number_format(1, ",", " ") }}
                                        </span>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col">
                <div class="alert alert-secondary">
                    <h2 class="alert-heading my-3">Les pires annonces</h2>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Annonce</th>
                                <th>Proprio</th>
                                <th>Moyenne</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for ad in worstAds %}
                                <tr>
                                    <td>{{ad.title}}</td>
                                    <td>
                                        {% if ad.avatar %}
                                            <img src="{{ asset("uploads/avatar/" ~  ad.avatar) }}" alt="" class="avatar avatar-micro">
                                            {{ad.firstName}}
                                            {{ad.lastName}}
                                        {% else %}
                                            <img src="{{ asset("uploads/img/avatar.png") }}" alt="" class="avatar avatar-micro">
                                            {{ad.firstName}}
                                            {{ad.lastName}}
                                        {% endif %}
                                    </td>
                                    <td>
                                        <span class="badge badge-primary">
                                            {{ad.note | number_format(1, ",", " ") }}
                                        </span>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
