{% extends "base.html.twig" %}
{% block title %} Modification de mot de passe {% endblock %}
{% block body %}
    <div class="container mt-4">
        {{ form_start(form)}}
            <h3 class="text-center">Modifer mon mot de passe</h3>
            <div class="row">
                <div class="col-3">
                    &nbsp;
                </div>
                <div class="col-6">
                    {{ form_row(form.currentPassword) }}
					{{ form_row(form.newPassword) }}
                    <button class="btn btn-success" type="submit">
                        <i class="fa fa-check"></i>
                        Modifier
                    </button>
                </div>
                <div class="col-3">
                    &nbsp;
                </div>
            </div>
        {{ form_end(form)}}
    </div>
{% endblock %}